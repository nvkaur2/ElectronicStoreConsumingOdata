<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" >
	<Table id="idTable" items="{/BusinessPartnerSet}">

		<columns>
			<Column minScreenWidth ="Tablet"  demandPopin="true">
				<Label text="Company Name"></Label>
			</Column>
			<Column minScreenWidth ="Tablet">
				<Label text="Email Address"></Label>
			</Column>
			<Column>
				<Label text="Web Address"></Label>
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{CompanyName}"></Text>
					<Text text="{EmailAddress}"></Text>
					<Input value="{WebAddress}"></Input>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>